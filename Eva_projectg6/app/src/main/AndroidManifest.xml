<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bremme.eva_projectg6" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name=".LogIn"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".RegisterMain"
            android:label="@string/title_activity_register_main" >
        </activity>
        <activity
            android:name=".ChooseChallenge"
            android:label="@string/title_activity_choose_challenge" >
        </activity>
        <activity
            android:name=".ViewChallenges"
            android:label="@string/title_activity_view_challenges" >
        </activity>
        <activity
            android:name=".FacebookRegister"
            android:label="@string/title_activity_facebook_register" >
        </activity>
    </application>

</manifest>
